<Window x:Class="ChargeCalc.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm ="clr-namespace:ChargeCalc.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <StackPanel>
        <Button Content="Connect" Height="30" Width="80" Margin="0,20,0,20" Command="{Binding ConnectCommand}"></Button>
        <Button Content="{Binding Test}" Height="30" Width="80"></Button>
    </StackPanel>
</Window>
